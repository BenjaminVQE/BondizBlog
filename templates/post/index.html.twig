{% extends 'base.html.twig' %}

{% block title %}Explorer les articles - Bondiz Blog{% endblock %}

{% block body %}
    <div class="container" style="padding-top: 2rem; padding-bottom: 4rem;">
        
        <header style="text-align: center; margin-bottom: 3rem;">
            <h1 style="font-size: 2.5rem; font-weight: 800; margin-bottom: 1.5rem; color: var(--dark);">
                Explorer nos <span class="text-gradient">Articles</span>
            </h1>
            
            <!-- Filter Bar -->
            <div class="flex-center" style="gap: 0.5rem; flex-wrap: wrap; justify-content: center; display: flex;">
                <a href="{{ path('app_post_index') }}" 
                   class="btn" 
                   style="border-radius: 999px; padding: 0.5rem 1.5rem; transition: all 0.2s;
                          {{ not currentCategory ? 'background: var(--dark); color: white;' : 'background: white; color: var(--dark); box-shadow: var(--shadow-sm);' }}">
                    Tous
                </a>
                
                {% for category in categories %}
                    <a href="{{ path('app_post_index', {category: category.id}) }}" 
                       class="btn" 
                       style="border-radius: 999px; padding: 0.5rem 1.5rem; transition: all 0.2s;
                              {{ currentCategory == category.id ? 'background: var(--dark); color: white;' : 'background: white; color: var(--dark); box-shadow: var(--shadow-sm);' }}">
                        {{ category.name }}
                    </a>
                {% endfor %}
            </div>
        </header>

        <!-- Posts Grid -->
        <div class="posts-grid">
            {% for post in posts %}
                <a href="{{ path('app_post_show', {id: post.id}) }}" class="post-card">
                    <div class="card-image-wrapper">
                        <img src="{{ post.image }}" alt="{{ post.title }}" class="card-image">
                    </div>
                    <div class="card-content">
                        <div class="card-meta">
                            <span style="color: var(--primary); font-weight: 600;">{{ post.category.name }}</span>
                            <span>{{ post.readTime }} min</span>
                        </div>
                        <h3 class="card-title">{{ post.title }}</h3>
                        <p class="card-excerpt">{{ post.excerpt }}</p>
                        <div class="read-more">
                            Lire la suite
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="arrow-icon">
                                <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </div>
                    </div>
                </a>
            {% else %}
                <p style="text-align: center; color: var(--gray); grid-column: 1 / -1; padding: 2rem;">Aucun article trouvé dans cette catégorie.</p>
            {% endfor %}
        </div>

    </div>
{% endblock %}
