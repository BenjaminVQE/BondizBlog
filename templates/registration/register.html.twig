{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 5rem; max-width: 500px;">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <h1 class="h3 mb-3 font-weight-normal" style="margin-bottom: 2rem;">{{ 'registration.title'|trans }}</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            <div style="margin-bottom: 1.5rem;">
                {{ form_row(registrationForm.pseudo, {
                    attr: {
                        style: 'width: 100%; padding: 0.75rem; border: 1px solid #ddd; border-radius: 0.5rem;'
                    },
                    label_attr: {
                        style: 'display: block; margin-bottom: 0.5rem; font-weight: 500;'
                    }
                }) }}
            </div>
            <div style="margin-bottom: 1.5rem;">
                {{ form_row(registrationForm.email, {
                    attr: {
                        style: 'width: 100%; padding: 0.75rem; border: 1px solid #ddd; border-radius: 0.5rem;'
                    },
                    label_attr: {
                        style: 'display: block; margin-bottom: 0.5rem; font-weight: 500;'
                    }
                }) }}
            </div>
            <div style="margin-bottom: 1.5rem;">
                {{ form_row(registrationForm.plainPassword, {
                    attr: {
                        style: 'width: 100%; padding: 0.75rem; border: 1px solid #ddd; border-radius: 0.5rem;'
                    },
                    label_attr: {
                        style: 'display: block; margin-bottom: 0.5rem; font-weight: 500;'
                    }
                }) }}
            </div>
            <div style="margin-bottom: 1.5rem;">
                {{ form_row(registrationForm.agreeTerms) }}
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%; margin-bottom: 1.5rem;">{{ 'registration.submit'|trans }}</button>
        {{ form_end(registrationForm) }}

        <div style="text-align: center;">
            <p>{{ 'registration.login_prompt'|trans({}, 'messages') }} <a href="{{ path('app_login') }}" style="color: var(--primary); text-decoration: none; font-weight: 600;">{{ 'registration.login_link'|trans({}, 'messages') }}</a></p>
        </div>
    </div>
{% endblock %}
